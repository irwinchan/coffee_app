
<div class="jumbotron recipes-header">
  <h1>Brewing Coffee</h1>
  <p>Share your brewing techniques</p>
</div>

<div class="search-form">
  <%= form_tag recipes_path, method: "get", class: "form-inline" do %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "by title or description"%>
     <button type="submit" class="btn btn-default">Search</button>
  <% end %>
</div>

<% if current_user %>
  <div class="form-container">
    <button class="btn btn-default" id="add-recipe"><%= link_to "Add recipe", new_recipe_path %></button>
    <div id="hide-form" class="col-sm-12">
      <button class="btn btn-default pull-right" id="close-new-recipe-form">
        <span class="glyphicon glyphicon-remove"></span>
      </button>
      <%= render 'recipe_form' %>
    </div>
  </div>
<% end %>

<% @recipes.each do |recipe| %>
  <div class="coffee_recipe list-group-item">
    <h3 class="list-group-heading"><%= link_to recipe.title, recipe_path(recipe) %></h3>
    <p class="description list-group-item-text"><%= recipe.description %><p>
  </div>
<% end %>