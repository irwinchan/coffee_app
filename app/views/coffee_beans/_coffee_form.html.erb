<%= form_for [user, coffee] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :brand %>
    <%= f.text_field :brand, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :origin %>
    <%= f.text_field :origin, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :roast %>
    <%= f.text_field :roast, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description_short %>
    <%= f.text_field :description_short, class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>

<%= render partial:'shared/error_messages', locals: {object: coffee} %>