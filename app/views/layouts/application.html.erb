<!DOCTYPE html>
<html>
<head>
  <title>CoffeeApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="login-status">
  <% if current_user %>
    <p>Welcome <%= link_to current_user.name, user_path(current_user) %> | <%= link_to "Log out", session_path("current"), :method => :delete %>  </p>
  <% else %>
    <p><%= link_to "Login", new_session_path %></p>

  <% end %>
</div>

<%= yield %>

</body>
</html>
